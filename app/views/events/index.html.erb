<h1>Listing events</h1>

<table>
  <thead>
    <tr>
      <th>E name</th>
      <th>Team 1</th>
      <th>Team 2</th>
      <th>Team 1 odds</th>
      <th>Team 2 odds</th>
      <th>Final score</th>
      <th>Game end time</th>
      <th>Total pot</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.e_name %></td>
        <td><%= event.team_1 %></td>
        <td><%= event.team_2 %></td>
        <td><%= event.team_1_odds %></td>
        <td><%= event.team_2_odds %></td>
        <td><%= event.final_score %></td>
        <td><%= event.game_end_time %></td>
        <td><%= event.total_pot %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

